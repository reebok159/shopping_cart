%main.container.general-main-wrap
  %h1.general-title-margin= t('cart.title')
  .visible-xs
    - if @order.items.count.zero?
      = t('cart.empty')
    - @order.items.each do |order_item|
      - item = order_item.book
      .general-cart-item.divider-lg-bottom
        %button.close.general-cart-close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        .general-img-wrap-table
          = image_tag(item.cover(:thumb), class: 'cart-img-shadow', alt: item.name)
        %p.title= item.name
        %table.table
          %tr
            %td
              %span.in-grey-600= t('cart.itemlist.price')
            %td
              %span.font-16.in-gold-500= number_to_currency(item.price)
          %tr
            %td.vertical-middle
              %span.in-grey-600= t('cart.itemlist.quantity')
            %td
              .input-group
                = simple_form_for order_item do |f|
                  - if order_item.quantity.to_i == 1
                    %a{href:"javascript:void(0)", class: 'input-link'}
                      %i.fa.fa-minus.line-heaght-40
                  - else
                    = link_to order_item_path(order_item, order_item: { quantity: order_item.quantity - 1 } ), method: "patch", class: "input-link" do
                      %i.fa.fa-minus.line-heaght-40
                  = f.input_field :quantity, as: :string, value: order_item.quantity, label: false, class: "form-control quantity-input"
                  = link_to order_item_path(order_item, order_item: { quantity: order_item.quantity + 1 } ), method: "patch", class: "input-link" do
                    %i.fa.fa-plus.line-heaght-40
          %tr
            %td
              %span.in-grey-600= t('cart.itemlist.subtotal')
            %td
              %span.font-16.in-gold-500= number_to_currency((order_item.quantity * item.price))
  .hidden-xs
    %table.table.table-hover
      %tr.no-hover
        %th.col-pic.pl-0
          %span.in-grey-600= t('cart.itemlist.product')
        %th.col-title
        %th.col-price
          %span.in-grey-600= t('cart.itemlist.price')
        %th.col-quantity
          %span.in-grey-600= t('cart.itemlist.quantity')
        %th.col-total
          %span.in-grey-600= t('cart.itemlist.subtotal')
        %th.col-close
      - if @order.items.count.zero?
        %tr
          %td{colspan: 6}
            .text-center
              = t('cart.empty')
      - @order.items.each do |order_item|
        - item = order_item.book
        %tr
          %td
            .general-img-wrap-table
              = image_tag(item.cover(:thumb), class: 'cart-img-shadow pull-left', alt: "#{item.name}")
          %td
            %p.title= item.name
          %td
            %span.font-16.in-gold-500= number_to_currency(item.price)
          %td
            .input-group
              = simple_form_for order_item do |f|
                - if order_item.quantity.to_i == 1
                  %a{href:"javascript:void(0)", class: 'input-link'}
                    %i.fa.fa-minus.line-heaght-40
                - else
                  = link_to order_item_path(order_item, order_item: { quantity: order_item.quantity - 1 } ), method: "patch", class: "input-link" do
                    %i.fa.fa-minus.line-heaght-40
                = f.input_field :quantity, as: :string, value: order_item.quantity, label: false, class: "form-control quantity-input"
                = link_to order_item_path(order_item, order_item: { quantity: order_item.quantity + 1 } ), method: "patch", class: "input-link" do
                  %i.fa.fa-plus.line-heaght-40
          %td
            %span.font-16.in-gold-500= number_to_currency((order_item.quantity * item.price))
          %td
            = link_to order_item_path(order_item), method: "delete", class: "close general-cart-close" do
              %span{'aria-hidden': "true"} &times;
  .general-order-wrap
    .row
      .col-sm-4
        = simple_form_for @order, method: :post, url: activate_coupon_path, html: { novalidate: false } do |f|
          .input-group.general-input-group
            %label.input-label= t('cart.coupon.enteryourcode')
            = f.input :coupon_id, input_html: {placeholder: "#{t('cart.coupon.enteryourcode')}", class: "form-control mb-30", type: "text", value: ""}, required: true, label: false
            %div
              = f.button :submit, t('cart.coupon.apply'), class: "btn btn-primary mr-5 mb-15 visible-xs-inline-block"
              = f.button :submit, t('cart.coupon.updcart'), class: "btn btn-primary mb-15 res-block"
      .col-sm-8
        .res-mr-200.text-center.general-text-right
          %p.in-gold-500.font-18= t('cart.total.ordersumm')
          %table.general-summary-table.general-summary-table-right.general-text-right
            %tr
              %td
                %p.font-16= "#{t('cart.total.ordersumm')}:"
              %td
                %p.font-16= number_to_currency(@order.subtotal)
            %tr
              %td
                %p.font-16= "#{t('cart.total.coupon')}:"
              %td
                %p.font-16= number_to_currency(@order.coupon_discount)
            %tr
              %td
                %strong.font-18= "#{t('cart.total.ordertotal')}:"
              %td
                %strong.font-18= number_to_currency(@order.total_items)
          = link_to t('cart.checkout'), checkout_path, class: "btn btn-default mb-20 visible-xs-inline-block"
  .text-center
    = link_to t('cart.checkout'), checkout_start_path, class: "btn btn-default mb-20 hidden-xs"
